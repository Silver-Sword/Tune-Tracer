{
  "hosting": {
    "public": "frontend/src",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "nextApp"
      }, 
      {
        "source": "/workspace/**",
        "dynamicLinks": true
      },
      {
        "source": "/signUpUser",
        "function": {
          "functionId": "signUpUser",
          "region": "us-central1"
        }
      } 
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
